{
	// 页面配置文件
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/uni-style/uni-style"
		},
		{
			"path": "pages/message/message",
			"style": {
				"navigationBarTitleText": "信息页",
				"navigationBarBackgroundColor": "#007AFF",
				"h5": { //h5页面配置
					"pullToRefresh": {
						"color": "#DD524D"
					}
				}
			}
		},
		{
			"path": "pages/contact/contact"
		},
		{
			"path": "pages/detail/detail"
		},
		{
			"path": "pages/data/data"
		},
		{
			"path": "pages/list/list",
			"style": {
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 50
			}
		}
    ],
	// 全局配置文件
	"globalStyle": {
		"navigationBarTextStyle": "white", //头部文字颜色
		"navigationBarTitleText": "test", //头部文字
		"navigationBarBackgroundColor": "#7ff000", //头部背景色
		"backgroundColor": "#fff555",
		//"enablePullDownRefresh": true, //开启下拉
		"backgroundTextStyle": "dark" //下拉样式色度
	},
	//导航栏配置
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#007AFF",
		"backgroundColor": "#F0AD4E",
		"borderStyle": "white",
		// "position":"top",
		"list": [{
				"text": "样式",
				"pagePath": "pages/uni-style/uni-style",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"text": "上传",
				"pagePath": "pages/message/message",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"text": "导航",
				"pagePath": "pages/contact/contact",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"text": "数据",
				"pagePath": "pages/data/data",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"text": "list",
				"pagePath": "pages/list/list",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			}
		]
	},

	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "详情页", //模式名称
			"path": "pages/detail/detail", //启动页面，必选
			"query": "id=80" //启动参数，在页面的onLoad函数里面得到
		}]
	}
